- content_for :title, "Trips - #{t(:site_title)}"
.row.info-header
  .col-sm-12
    .btns.pull-right{style: 'padding-bottom:4px;'}
      =link_to t(:plan), root_path, {class: 'btn action-button', role: 'button'}
    %h1=t(:trips)
.panel.panel-default{style: 'padding: 0px;', role: "main", aria: {label: "Trips Table"}}
  .panel-heading
    %h2.panel-title
      = t(:trips)
      = add_tooltip("trips_help")
  .panel-body
    = render partial: "trips_display_table", locals: {trips: @trips, traveler: @traveler, show_username: false}

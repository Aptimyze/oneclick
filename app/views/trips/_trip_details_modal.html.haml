.modal-dialog.modal-lg{"data-itinerary-id" => @itinerary.id}
  .modal-content
    .modal-body{style: "padding: 0px;"}
      .col-sm-12.well{style: "padding: 5px;"}
        .col-sm-12{style: "padding: 5px 0px;"}
          %button.btn.btn-default.pull-right.action-button{"type" => "button", "data-dismiss" => "modal"}=t(:close)
          %b.modal-title
            = "#{t(:trip_details)} - " + @itinerary.trip_part.description_without_direction
        = render :partial => 'trip_plan_summary_header', :locals => { :itinerary => @itinerary }
        - if @itinerary.is_mappable
          .col-sm-12{style: "background: white; margin-bottom: 5px; border-radius: 5px; overflow-y:auto; max-height: 300px; padding: 5px;"}
            = render :partial => get_trip_partial(@itinerary), :locals => { :itinerary => @itinerary }
          .col-sm-12{style: "height: 300px; background: white; border-radius: 5px; padding: 0px;"}
            = render :partial => 'map_details', :locals => { :itinerary => @itinerary, :mapid => 'review_map'}
        - else
          .col-sm-12{style: "background: white; border-radius: 5px; overflow-y:auto; max-height: 300px;"}
            = render :partial => get_trip_partial(@itinerary), :locals => { :itinerary => @itinerary }
}

= yield :scripts

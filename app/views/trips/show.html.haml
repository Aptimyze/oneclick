%p#notice= notice

.row
  .span12.center
    -#.container-fluid
    - @trip.itineraries.where(status: 200).each_slice(3) do |itineraries|
      .row-fluid
        .span12
          %ul.thumbnails
            - itineraries.each do |itinerary|
              %li.span4
                -#.container-fluid
                .row-fluid
                  %a.span12.thumbnail.actionbutton{alt: "Transit Trip", title: "Transit Trip", href: '/501.html'}
                    .row-fluid
                      %p.text-center.mode_title Transit
                    .row-fluid
                      .span4
                        -#= image_tag action[:img], alt: action[:label]
                        %i.icon-bus-sign.mode_icon_formatting
                      .span8
                        .row-fluid
                          .span4
                            %p= 'Duration'
                          .span8
                            %strong= itinerary.duration_to_words(itinerary.duration)
                        .row-fluid
                          .span4.arrival_label
                            %p= 'Walking'
                          .span8.arrival_time
                            %strong= itinerary.duration_to_words(itinerary.walk_time)
                        .row-fluid
                          .span4
                            %p= 'Depart'
                          .span8.departure_time
                            %strong= itinerary.start_time.localtime.strftime('%I:%M %p')
                        .row-fluid
                          .span4.arrival_label
                            %p= 'Arrive'
                          .span8.arrival_time
                            %strong= itinerary.end_time.localtime.strftime('%I:%M %p')
                    .row-fluid
                      -YAML.load(itinerary.legs).each_slice(6) do |legs|
                        .row-fluid
                          - legs.each do |leg|
                            .span2
                              %p.transit_itinerary_icons{class: itinerary.get_mode_icon(leg['mode'])}
                              %p.transit_itinerary_text.text-center= leg['route']

= link_to 'Edit', edit_trip_path(@trip)
\|
= link_to 'Back', trips_path

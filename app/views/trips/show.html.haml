.row-fluid
  .span12
    %h1
      %i{class: "icon #{CsHelpers::ACTION_ICONS[:plan_a_trip]}"}
      = t(:trip_options)
.well
  .row-fluid
    .span12
      .trip_prepositions= 'from '
      .trip_basic_text= (@trip.from_place.name || @trip.from_place.address)
      .trip_prepositions= ' to '
      .trip_basic_text= (@trip.to_place.name || @trip.to_place.address)
      .trip_prepositions= ' on '
      .trip_basic_text= @trip.trip_datetime.in_time_zone.strftime("%B %d, %Y")

.row-fluid
  %ul.thumbnails#itineraries
    = render 'trip_itineraries'
 
.row-fluid
  .well.well-small.span12
    = link_to new_trip_path do
      %i{class: CsHelpers::ACTION_ICONS[:plan_a_trip]}
      = t(:plan_a_trip)
    = link_to email_trip_path, {class: "pull-right"} do
      %i.icon-envelope
      Send to me

:javascript
  $(document).ready(function() {
    fix_thumbnails();
  });
  
  $(window).resize(function() {
    fix_thumbnails();
  });
  
  function fix_thumbnails() {
    $(".thumbnail").css('height', '');
    $(".thumbnail").css('overflow', '');
    var window_width = $(window).width();
    adjust_thumbnails(window_width);
    make_same_height('.actionbutton');
  };
  
  
  $("#itineraries").on("ajax:error", function(xhr,status){
    alert(status['responseText']);
  });

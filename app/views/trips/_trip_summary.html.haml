%a.span12.actionbutton{alt: title, title: title, "data-toggle" => "modal", href: "#transitDetails" + itinerary.id.to_s}
  .row-fluid
    .span4
      %i.mode_icon_formatting.hidden-phone{:class => icon}
    .span8 
      .row-fluid
        .span12
          %p.mode_title=title
      .row-fluid
        .span4
          %p= t(:duration)
        .span8
          %strong= itinerary.duration_to_words(itinerary.duration)
      .row-fluid
        .span4.arrival_label
          %p= t(:walking)
        .span8.arrival_time
          %strong= itinerary.duration_to_words(itinerary.walk_time)
      - unless itinerary.start_time.nil?
        .row-fluid
          .span4
            %p= t(:depart)
          .span8.departure_time
            %strong= itinerary.start_time.localtime.strftime('%I:%M %p')
      - unless itinerary.end_time.nil?
        .row-fluid
          .span4.arrival_label
            %p= t(:arrive)
          .span8.arrival_time
            %strong= itinerary.end_time.localtime.strftime('%I:%M %p')
      - unless itinerary.cost.nil?
        .row-fluid
          .span4
            %p= t(:cost)
          .span8.departure_time
            %strong= '$' + ("%.2f" % itinerary.cost).to_s
          
=render :partial => 'modal', :locals => {:itinerary => itinerary, :icon => icon, :title => title}

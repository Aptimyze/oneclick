
=simple_form_for @trip.return_part, url: user_trip_trip_part_path(trip_id: @trip.id),  html: { id: 'return_confirmation_form', class: 'form-horizontal' } do |f|
  .row
    %label.col-sm-4.text-right
      =translate_helper(:confirm_trip_purpose)
    = f.input :booking_trip_purpose_code, :label => false, :collection => @trip.return_part.get_booking_trip_purposes, :include_blank => false, wrapper_html: {class: 'col-sm-8', style: 'margin:0;'}, input_html: {id: 'return_trip_purpose_collection'}

  .row
    %label.col-sm-4.text-right
      =translate_helper(:number_of_guests)
    = f.input :guests, :as => :integer, :label => false, wrapper_html: {class: 'col-sm-8', style: 'margin:0;'}

  .row
    %label.col-sm-4.text-right
      =translate_helper(:number_of_attendants)
    = f.input :attendants, :as => :integer, :label => false, wrapper_html: {class: 'col-sm-8', style: 'margin:0;'}

  .row
    %label.col-sm-4.text-right
      =translate_helper(:number_of_mobility_devices)
    = f.input :mobility_devices, :as => :integer, :label => false, wrapper_html: {class: 'col-sm-8', style: 'margin:0;'}
.row-fluid
  .span3
    %i.mode_icon_formatting.trip_summary_icon{:class => get_trip_summary_icon(itinerary.mode)}
  .span9 
    %h2.trip_summary_title= get_trip_summary_title(itinerary.mode)
-if itinerary.duration
  .row-fluid
    %h4.span9.offset3.trip_summary_text= duration_to_words(itinerary.duration) + " (est.)"
-if itinerary.cost
  .row-fluid
    %h4.span9.offset3.trip_summary_text= number_to_currency(itinerary.cost)
-if itinerary.transfers
  .row-fluid
    %h4.span9.offset3.trip_summary_text= I18n.translate(:transfer, count: itinerary.transfers)
-if itinerary.trip.arrive_depart == 'arrive_by' && itinerary.end_time
  .row-fluid
    %h4.span9.offset3.trip_summary_text= t(:arrive_at) + ' ' + itinerary.end_time.localtime.strftime('%I:%M %p')
-if itinerary.trip.arrive_depart == 'depart_at' && itinerary.start_time
  .row-fluid
    %h4.span9.offset3.trip_summary_text= t(:depart_at) + ' ' + itinerary.start_time.localtime.strftime('%I:%M %p')
-if itinerary.walk_time
  .row-fluid
    %h4.span9.offset3.trip_summary_text= duration_to_words(itinerary.walk_time) + ' walking'


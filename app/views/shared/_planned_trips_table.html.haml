.row-fluid
  .span12
    %table.table.table.condensed.table-striped.table-hover.table-bordered#datatable
      %thead
        %tr
          %th.left Id
          %th.left User
          %th.left Creator
          %th.left From
          %th.left To
          %th.center Trip Date/Time
          %th.center Created At          
          %th.center Actions
      %tbody
        - planned_trips.each do |pt|
          %tr
            %td.left= pt.id
            %td.left= pt.trip.user
            %td.left= pt.creator            
            %td.left= pt.trip.from_place
            %td.left= pt.trip.to_place
            %td.center.nowrap
              = format_date_time(pt.trip_datetime)
            %td.center.nowrap
              = format_date_time(pt.created_at)
            %td.center.nowrap
              = link_to user_planned_trip_path(current_user, pt, :show_hidden => 1), {class: "btn btn-mini btn-success text-center"} do
                %i.icon-share-sign
                = "Itinerary"
              = link_to details_user_planned_trip_path(current_user, pt), {class: "btn btn-mini btn-info text-center"} do
                %i.icon-exclamation-sign
                = "Details"

= render 'shared/datatable_javascript'

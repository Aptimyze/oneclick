- if is_traveler
  .row-fluid
    .span12.alert.dropdown
      %div{style: 'text-align: center;'}
        %div{style: 'display: inline-block'}
          %a.dropdown-toggle{data: {toggle: 'dropdown', target: '#'}}
            %i.icon.icon-compass{style: 'font-size: 1.5em;'}
            = "Assisting #{@traveler.name}"
            %b.caret
          %ul.dropdown-menu{role: 'menu'}
            %li
              = link_to unset_traveler_user_trips_path(current_user) do
                %i.icon.icon-remove
                Stop assisting

#publicNav.navbar.navbar-default.navbar-fixed-top{:role => "navigation", aria: {label: "Header"}}
  .container{:style => 'width:100%;'}
    #navHeader
      %a.navbar-brand{:href => root_url, :style => 'padding: 0px;'}
        %img.img-responsive.pull-left{:id => 'logo', :src => "#{get_logo_path}", :alt => "#{get_logo_text}"}
      .pull-right
        %a#help{:href => root_url + "/content/faq"}
          %i.fa.fa-question-circle
          %span.sr-only Help
      %button.navbar-toggle{"data-target" => "#userMenuNavbar", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only User menu
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    #userMenuNavbar.collapse.navbar-collapse.navbar-right
      %ul.nav.navbar-nav
        - if can? :see, :admin_menu
          %li.dropdown
            = render partial: 'admin/admin_home/admin_dropdown_menus', locals: { :available_actions => admin_actions, :title => t(:admin_actions) }
        / end of nav navbar-nav
        - if can? :see, :staff_menu
          %li.dropdown
            = render partial: 'admin/admin_home/admin_dropdown_menus', locals: { :available_actions => staff_actions, :title => t(:staff_actions) }
        - if user_signed_in?
          %li#userDropdown.dropdown
            %a.dropdown-toggle{"href" => "#", "data-target" => "#", "data-toggle" => "dropdown", role: 'button', 'aria-haspopup' => 'true'}
              %i.fa.fa-user
              - unless is_assisting
                = "#{t(:welcome)}, #{get_traveler.welcome}"
              - else
                = t(:assisting_assisted_user_email, assisted_user: @traveler.name)
              %b.caret
            %ul.dropdown-menu{:role => "menu"}
              = render partial: 'menu_item', collection: traveler_actions(with_logout: true)
        - else
          %li#userDropdown.dropdown
            %a.dropdown-toggle{"href" => "#", "data-target" => "#", "data-toggle" => "dropdown", role: 'button', 'aria-haspopup' => 'true'}
              %i.fa.fa-user
              = "#{t(:welcome)}, #{t(:visitor)}"
              %b.caret
            %ul.dropdown-menu{:role => "menu"}
              = render partial: 'menu_item', collection: traveler_actions
    / end of #navHeader
/ end of publicNav
:javascript
  $(function () {
    $('#main').css('padding-top', ($('#publicNav').height() + 10) + 'px');
    $('#publicNav').mutate('height', function(el) {
      $('#main').css('padding-top', ($(el).height() + 10) + 'px');
    });

    $('body').on('keypress', 'a', function(e) {
      if (e.which == 32) {
          $(this)[0].click();
          e.preventDefault();
      }
    });
  });

#accommodations_form
  .row-fluid
    .span12
      = simple_form_for @user_accommodations_proxy, :url => path, :method => 'put', :remote => not(inline)  do |f|
        = f.error_notification
        = render partial: 'characteristics/eligibility_alert', locals: {inline: inline}
        -TravelerAccommodation.where(:datatype => 'bool').each do |accommodation|
          = f.input accommodation.code.to_sym, collection: [[true, 'Yes'], [false, 'No'], ['na', 'Unsure']], :required => false, as: :radio_buttons, label: accommodation.note, label_method: :last, value_method: :first, :item_wrapper_class => "inline"

        - if inline
          = button_tag :type => 'submit', :class => "btn btn-primary" do
            %i{class: "icon #{CsHelpers::ACTION_ICONS[:plan_a_trip]}"}
            Save and plan my trip
            / = t(:plan_it)
          = link_to :back, :class => "cancel_link" do
            %i.icon.icon-reply
            = t(:cancel)
        - else
          = button_tag type: :submit, class: 'btn btn-primary controls' do
            %i.icon.icon-ok
            = t(:update)
          = link_to :back, :class => "cancel_link" do
            %i.icon.icon-reply
            = t(:cancel)

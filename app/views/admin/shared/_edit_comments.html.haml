    .panel.panel-default
      .panel-heading
        %h4.panel-title= t(:private_comments)
      .panel-body
        =t(:private_comments_message)
        - commentable.private_comments.sort!{|a, b| a.locale <=> b.locale}
        = f.simple_fields_for :private_comments do |comment|
          = comment.input :comment, label: [t("locales.#{comment.object.locale}"), t(:comment)].join(' ')
          = comment.input :locale, as: :hidden
          = comment.input :visibility, as: :hidden

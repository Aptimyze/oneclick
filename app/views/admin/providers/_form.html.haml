= simple_form_for [:admin, @provider], html: { class: 'form-horizontal'},
        wrapper: :horizontal_form do |f|
  = f.error_notification
  .row
    .col-sm-6.pull-left
      %h2
        = f.input :name
    .col-sm-6.pull-right
      .row
        .col-sm-6.pull-right
          - if can? :update, @provider
            = f.button :submit, t(:apply), class: "btn action-button default"
            = link_to t(:cancel), :back, class: "btn action-button default"

  .row
    .col-sm-6
      .well
        %h4= t(:provider_contact_info)
        = f.input :address
        = f.input :city, label: "#{t(:city)}/#{t(:state)}/#{t(:zip)}",
          input_html: {class: "col-sm-6 form-control"}, wrapper_html: {class: ""} do
          = f.input_field :city, class: "col-sm-3"
          %label.col-sm-1
          = f.input_field :state, class: "col-sm-2"
          = f.input_field :zip, class: "col-sm-3 pull-right"
        = f.input :phone
        = f.input :email
        = f.input :url

    .col-sm-6
      .well
        %h4= t(:internal_contact)
        = f.input_field :internal_contact, collection: @provider.users, class: "form-control",
                selected: (@contact.id if @contact) , include_blank: "None"

  .well
    %h4= t(:staff_actions)
    = f.association :staff, collection: User.staff_assignable
                
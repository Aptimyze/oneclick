.header
  - if can? :create, Provider
    = link_to t(:new_provider), new_admin_provider_path,
        {class: 'btn action-button btn-default pull-right', role: 'button'}
      
  %h1= t(:providers)

%table.table.table-condensed.table-striped.table-bordered.table-hover#datatable#admin_providers_table
  %thead
    %tr
      %th= t(:name)
      %th= t(:status)
      %th
  %tbody
    - @providers.each do |provider|
      %tr
        %td= link_to provider.name, admin_provider_path(provider)
        %td
          - if provider.active == false
            = t(:inactive)

        %td.center
          = link_to admin_provider_services_path(provider) do
            = t(:services)

:javascript
  $(document).ready(function() {
    $('#admin_providers_table').dataTable( {
          "oLanguage": {
              "sLengthMenu": "Display _MENU_ agencies per page",
              "sZeroRecords": "Nothing found - sorry",
              "sInfo": "Showing _START_ to _END_ of _TOTAL_ agencies",
              "sInfoEmpty": "Showing 0 to 0 of 0 agencies",
              "sInfoFiltered": "(filtered from _MAX_ total agencies)"
          },
          "sDom": "<'row'<'col-sm-6'f>><'row'<'col-sm-6'l>r>t<'row'<'col-sm-6'i><'col-sm-6'p>>",
      } );
  } );            

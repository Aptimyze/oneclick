- temp_rating = @provider.ratings.build(rateable: @provider)
- if can? :index, Provider
  .row
    .col-sm-12
      = link_to t(:all_providers), admin_providers_path
.row
  .col-sm-5
    %h2
      = @provider.name
    - unless @provider.active
      %p= t(:inactive)
  .col-sm-7.form-group
    .row
      .col-sm-12
        - if can? :destroy, @provider
          = button_to t(:delete), { action: "destroy", id: @provider.id }, method: :delete, data: { confirm: t(:confirm_msg) }, class: "btn action-button btn-default", form_class: "form-horizontal pull-right"
        - if can? :update, @provider
          = link_to edit_admin_provider_path(@provider), {class: 'btn action-button btn-default pull-right', role: 'button'} do
            = icon_label(:edit)
        -if Oneclick::Application.config.public_write_feedback
          - if can? :read, temp_rating
            .pull-right
              = @provider.rating_in_stars
              %button.btn.action-button.btn-default{data: {toggle: 'modal', target: "#feedback_modal"}}
                = t(:feedback)
          = render partial: "ratings/organization_feedback_modal", locals: {rateable: @provider}
.row
  .col-sm-6
    .panel.panel-default
      .panel-heading
        %h4.panel-title= t(:provider_contact_info)
      .panel-body              
        %table.table.table-condensed
          %tr
            %td.text-right
              = t(:address) + ":"
            %td.text-left
              %b= @provider.address.to_s
            %td.text-left
              %b= @provider.city.to_s
            %td.text-left
              %b= @provider.state.to_s
            %td.text-left
              %b= @provider.zip.to_s
          %tr
            %td.text-right
              = t(:phone)+ ":  "
            %td.text-left{colspan: 4}
              %b= @provider.phone.to_s
          %tr
            %td.text-right
              = t(:email)+ ":  "
            %td.text-left{colspan: 4}
              %b= mail_to @provider.email.to_s
          %tr
            %td.text-right
              = t(:url)+ ":  "
            %td.text-left{colspan: 4}
              - if @provider.url
                %b= link_to @provider.url, @provider.url

  - if can? :full_read, @provider
    .col-sm-6
      .panel.panel-default
        .panel-heading
          %h4.panel-title= t(:internal_contact)
        .panel-body
          %table.table.table-condensed
            %tr
              %td.text-right
                = t(:name) + ": "
              %td.text-left
                %b= @provider.internal_contact_name
            %tr
              %td.text-right
                = t(:title)+": "
              %td.text-left
                %b= @provider.internal_contact_title
            %tr
              %td.text-right
                = t(:phone)+ ": "
              %td.text-left
                %b= @provider.internal_contact_phone
            %tr
              %td.text-right
                = t(:email)+ ":  "
              %td.text-left
                %b= mail_to @provider.internal_contact_email
            - if @contact
              %tr
                %td.text-right
                  = t(:user) + ": "
                %td.text-left
                  %b= link_to @contact.name, admin_user_path(@contact)
              

-if can? :full_read, @provider
  .panel.panel-default
    .panel-heading
      %h4.panel-title= t(:staff_actions)
    .panel-body
      %table.ALTtable.table-condensed
        %tr
          %th.text-left
            = t(:name)
          %th.text-left
            = t(:title)
          %th.text-left
            = t(:phone)
          %th.text-left
            = t(:email)

        - if @staff.count > 0
          - @staff.each do |s|
            %tr
              %td.text-left
                %b= s.name.to_s
              %td.text-left
                %b= s.title.to_s
              %td.text-left
                %b= s.phone.to_s
              %td.text-left
                %b= mail_to s.email.to_s
        - else
          %tr
            %td= t(:nothing_found_sorry)

  .panel.panel-default
    .panel-heading
      %h4.panel-title= t(:services)
    .panel-body
      = render 'services/table'

  .row
    .col-sm-6
      .panel.panel-default
        .panel-heading
          / %h4.panel-title= t(:other_information)
          %h4.panel-title Other Information
        .panel-body
          %table.table
            %tr
              %td Logo URL:
              %td= @provider.logo_url || '(None)'

:javascript
  $(document).ready(function() {
    $('#admin_services_table').dataTable( {
          "oLanguage": {
              "sLengthMenu": "Display _MENU_ services per page",
              "sZeroRecords": "Nothing found - sorry",
              "sInfo": "Showing _START_ to _END_ of _TOTAL_ services",
              "sInfoEmpty": "Showing 0 to 0 of 0 services",
              "sInfoFiltered": "(filtered from _MAX_ total services)"
          },
          "sDom": "<'row'<'col-sm-6'l>r>t<'row'<'col-sm-6'i><'col-sm-6'p>>",
      } );
  } );

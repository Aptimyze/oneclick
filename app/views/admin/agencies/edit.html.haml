= simple_form_for @agency, url: admin_agency_path, html: { class: 'form-horizontal' },wrapper: :horizontal_form do |f|
  .row.info-header
    .col-sm-6
      %h1
        = f.input :name
    .col-sm-6.btns
      - if can? :update, @agency
          .pull-right
            = button_tag type: 'submit', class: "btn action-button" do
              = icon_label(:apply)
            = link_to admin_agency_path(@agency), class: 'btn action-button', role: 'button' do
              = icon_label(:cancel)
  
  .row
    .col-sm-6
      .panel.panel-default
        .panel-heading
          %h4.panel-title= t(:contact_info)
        .panel-body
          = f.input :address
          = f.input :phone
          = f.input :email
          = f.input :url
          = f.association :parent, collection: @agency.possible_parents
    .col-sm-6
      .panel.panel-default
        .panel-heading
          %h4.panel-title= t(:internal_contact)
        .panel-body
          = f.input :internal_contact_name
          = f.input :internal_contact_title
          = f.input :internal_contact_phone
          = f.input :internal_contact_email
          = f.input :internal_contact, collection: @agency.users, class: "form-control",
                selected: (@contact.id if @contact) , include_blank: "None", label: t(:user)

  .panel.panel-default
    .panel-heading
      %h4.panel-title= t(:staff_actions)
    .panel-body
      .col-sm-6
        %h5= t(:administrators)
        .scrolling-checkbox-list
          = f.association :administrators, collection: User.staff_assignable.order(:first_name),
                  as: :check_boxes, wrapper: :inline_checkboxes, label: false
      .col-sm-6
        %h5= t(:agents)
        .scrolling-checkbox-list
          = f.association :agents, collection: User.staff_assignable,
                  as: :check_boxes, wrapper: :inline_checkboxes, label: false

  .row
    .col-sm-6
      .panel.panel-default
        .panel-heading
          .row
            .col-sm-12
              %h4.panel-title= t(:public_comments)
        .panel-body
          =t(:public_comments_message)
          = f.input :public_comments, :input_html => {:rows => 10}, :label => false
    .col-sm-6
      .panel.panel-default
        .panel-heading
          .row
            .col-sm-12
              %h4.panel-title=t(:private_comments)
        .panel-body
          =t(:private_comments_message)
          = f.input :private_comments, :input_html => {:rows => 10}, :label => false
- temp_rating = @agency.ratings.build(rateable: @agency)
- if can? :index, Agency
  .row
    .col-sm-12
      = link_to t(:all_agencies), admin_agencies_path
.row.info-header
  .col-sm-5
    %h2= @agency.name
    -unless @agency.active
      %p= t(:inactive)
  .col-sm-7.btns
    - if can? :destroy, @agency
      = button_to t(:delete), { action: "destroy", id: @agency.id }, method: :delete, data: { confirm: t(:confirm_msg) }, class: "btn action-button", form_class: "form-horizontal pull-right"
    - if can? :update, @agency
      = link_to edit_admin_agency_path(@agency), {class: 'btn action-button pull-right', role: 'button'} do
        = icon_label(:edit)
    -if Oneclick::Application.config.public_write_feedback
      - if can? :read, temp_rating
        .pull-right
          = RateableDecorator.decorate(@agency).rating_in_stars
          %button.btn.action-button{data: {toggle: 'modal', target: "#feedback_modal"}}
            = t(:feedback)
      - else
        -# if creating feedback is allowed, but reading isn't, just load the form into the modal on click
        %button.btn.action-button.btn-default{data: {toggle: 'modal', target: "#feedback_modal", remote: new_agency_rating_path(@agency)}}
          = t(:feedback)
      = render partial: "ratings/organization_feedback_modal", locals: {rateable: @agency}
.row
  = render partial: "public_details", locals: {agency: @agency}
  - if can? :full_read, @agency
    .col-sm-6
      .panel.panel-default
        .panel-heading
          %h4.panel-title= t(:internal_contact)
        .panel-body
          %table.table.table-condensed
            %tr
              %td.text-right
                = t(:name) + ": "
              %td.text-left
                %b= @agency.internal_contact_name
            %tr
              %td.text-right
                = t(:title)+": "
              %td.text-left
                %b= @agency.internal_contact_title
            %tr
              %td.text-right
                = t(:phone)+ ": "
              %td.text-left
                %b= @agency.internal_contact_phone
            %tr
              %td.text-right
                = t(:email)+ ":  "
              %td.text-left
                %b= mail_to @agency.internal_contact_email
            - if @contact
              %tr
                %td.text-right
                  = t(:user) + ": "
                %td.text-left
                  %b= @contact.name
- if can? :full_read, @agency
  .panel.panel-default#staff
    .panel-heading
      %h3= t(:staff_actions)
    .panel-body
      %h4= t(:administrators)
      %table.ALTtable.table-condensed#admin_table
        %thead
          %tr
            %th= t(:name)
            %th= t(:title)
            %th= t(:phone)
            %th= t(:email)
        %tbody
          - @admins.each do |s|
            %tr
              %td= s.name.to_s
              %td= s.title.to_s
              %td= s.phone.to_s
              %td= mail_to s.email.to_s

      %h4= t(:agents)
      %table.ALTtable.table-condensed#agent_table
        %thead
          %tr
            %th= t(:name)
            %th= t(:title)
            %th= t(:phone)
            %th= t(:email)
        %tbody
          - @agents.each do |s|
            %tr
              %td
                = s.name.to_s
              %td
                = s.title.to_s
              %td
                = s.phone.to_s
              %td
                = mail_to s.email.to_s


%h1= t(:provider_orgs)

%table.table.table-condensed.table-striped.table-bordered.table-hover#datatable#admin_provider_orgs_table
  %thead
    %tr
      %th= t(:name)
      %th
  %tbody
    - @provider_orgs.each do |provider_org|
      %tr
        %td= link_to provider_org.name, admin_provider_org_path(provider_org)
        %td.center
          = link_to admin_provider_org_services_path(provider_org), {class: 'btn'} do
            %i.fa.fa-info-circle
            = t(:services)

= link_to t(:new_provider_org), new_admin_provider_org_path, {class: 'btn'}

:javascript
  $(document).ready(function() {
    $('#admin_provider_orgs_table').dataTable( {
          "oLanguage": {
              "sLengthMenu": "Display _MENU_ provider organizations per page",
              "sZeroRecords": "Nothing found - sorry",
              "sInfo": "Showing _START_ to _END_ of _TOTAL_ provider organizations ",
              "sInfoEmpty": "Showing 0 to 0 of 0 provider organizations ",
              "sInfoFiltered": "(filtered from _MAX_ total provider organizations )"
          }
      } );
  } );
- content_for :title, "Trips - #{t(:site_title)}"
.row.info-header
  .col-sm-12
    .btns.pull-right
      = link_to(t(:plan), new_user_trip_path(@traveler),class: "btn action-button" )
    %h1=t(:trips)
.panel.panel-default{style: 'padding: 0px;'}
  .panel-heading
    %h2.panel-title
      = t(:trips)
      = add_tooltip("trips_help")
  .panel-body
    = render partial: "trips/trips_display_table", locals: {trips: @trips, traveler: @traveler, show_username: true}

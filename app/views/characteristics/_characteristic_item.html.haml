- is_arc = Oneclick::Application.config.brand == 'arc'
- if is_arc
  %table.col-sm-12
    %tbody
      %tr
        %td.characteristics-icon{:style => 'background-image: url(' + (item.logo_url.nil? ? '' : ActionController::Base.helpers.asset_path(item.logo_url)) + ');'}
        %td{:style => 'width: 100%'}
          - case item.datatype
          - when 'bool'
            = f.input item.code.to_sym, collection: [[true, t(:yes_str)], [false, t(:no_str)], [UserProfileProxy::PARAM_NOT_SET, t(:not_sure_str)]], :required => false, as: :radio_buttons, label: t(item.note), label_method: :last, value_method: :first, :item_wrapper_tag => false
          - else
          = f.input item.code.to_sym, label: t(item.note)
- else
  - case item.datatype
    - when 'bool'
      = f.input item.code.to_sym, collection: [[true, t(:yes_str)], [false, t(:no_str)], [UserProfileProxy::PARAM_NOT_SET, t(:not_sure_str)]], :required => false, as: :radio_buttons, label: t(item.note), label_method: :last, value_method: :first
    - else
      = f.input item.code.to_sym, label: t(item.note)
.row-fluid
  .span12
    .pull-left
      -if @trip.taken == true or @trip.taken == false
        %h1
          %i.icon.icon-star
          ="Thank you for your feedback!"
        %h4
          ="If you would like to provide optional comments or a rating for your trip, you can do so below."
      -else
        %h1
          %i.icon.icon-star
          = "Rate your recent trip."

.row-fluid
  .span12.well.trip_header
    = render partial: 'trips/trip_header', locals: {trip: @trip}

.row-fluid.top-margin
  .span12
    =ratings_for @trip, :remote_options => {:url => rate_rating_path(:user_id => @traveler.id ,:id => @trip.id)}

.row-fluid.top-margin
  .span12
    = simple_form_for :trip, url: comments_rating_path(:user_id => @traveler.id ,:id => @trip.id), html: { class: 'form-vertical',
      id: 'user_comments_form_' + @trip.id.to_s} do |f|
      = f.error_notification
      = f.input :user_comments, :as => :text, label: "Tell us about your recent trip.", required: false, :input_html => { :rows=> 8, :columns => 50 , :style => 'width: 98%', :value => @trip.user_comments}
      = button_tag type: :submit, class: 'pull-right btn btn-info' do
        =t(:submit)

:javascript
  $('#send_by_email_form').on('submit', function() {
    $('#send_trip_by_email').modal('hide')
  })



= simple_form_for @ratings_proxy, url: url do |f|
  - @ratings_proxy.rateables.each do |rateable|
    = simple_fields_for :ratings, rateable.ratings.build, index: rateable.class.name do |ratings_form|
      .panel.panel-default
        .panel-heading
          %h3= rateable.to_s
        .panel-body
          = ratings_form.input :value, as: :select, collection: 1..Rating::MAXRATING, include_blank: t(:none), label: t(:feedback_rating)
          = ratings_form.input :comments, label: t(:feedback_comments)
          = ratings_form.input :id, as: :hidden, :input_html => { :value => rateable.id }
  = f.submit t(:submit_review), class: "btn action-button default"
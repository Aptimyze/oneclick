%p= t(:trip_options_information_from_from, from: @from)

%hr

%table
  %tr
    %td= t(:from)
    %td= @trip.from_place.name
  %tr
    %td= t(:to)
    %td= @trip.to_place.name
  %tr
    %td= t(:at_time)
    %td= format_date(@trip.trip_datetime.in_time_zone)

%hr

%table
  %thead
    %tr
      %th Mode
      %th Start Time
      %th End Time
      %th Walk Time
      %th Transit Time
      %th Wait Time
      %th Walk Dist                
      %th Cost
  %tbody
    - @trip.valid_itineraries.each do |itin|
      %tr
        %td= itin.mode
        %td= itin.start_time.nil? ? "" : format_time(itin.start_time.in_time_zone) 
        %td= itin.end_time.nil? ? "" : format_date_time(itin.end_time.in_time_zone)
        %td= itin.walk_time.nil? ? "" : duration_to_words(itin.walk_time)
        %td= itin.transit_time.nil? ? "" : duration_to_words(itin.transit_time)
        %td= itin.wait_time.nil? ? "" : duration_to_words(itin.wait_time)
        %td= itin.walk_distance.nil? ? "" : distance_to_words(itin.walk_distance)
        %td= itin.cost.nil? ? "" : number_to_currency(itin.cost)



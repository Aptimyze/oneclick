.col-md-6.col-md-offset-3.well
  %h2.text-center
    %strong
      Reset Password

  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'col-md-6 col-md-offset-3' }) do |f|

    .field
      = f.label :email
      = f.email_field :email, :placeholder => 'Email', :class => 'form-control'
      = f.error :email


    .pull-left
      %br
      = content_tag(:button, :type=>:submit, :class => "btn btn-primary", :style => "margin-right:5px;") do
        Send reset instructions
    
      = link_to :back, :class => "btn btn-primary" do  
        Back

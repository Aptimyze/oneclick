.row-fluid
  .span12
    %h4 My travelers
.row-fluid
  .span12
    %table.table.table.condensed.table-striped.table-hover.table-bordered#travelersdatatable
      %thead
        %tr
          %th.left Email address
          %th.left Status
          %th.center Actions
      %tbody
        - current_user.traveler_relationships.each do |t|
          %tr
            %td.left= t.traveler.email
            %td.left= t.status
            %td.center
              - if t.pending?
                = link_to accept_user_traveler_relationship_path(current_user, t.id), remote: true, class: "btn btn-mini btn-success text-center" do
                  %i.icon-ok
                  =t(:accept)
              - if t.confirmed?
                = link_to assist_user_traveler_relationship_path(current_user, t.id), class: "btn btn-mini btn-primary text-center" do
                  %i.icon-compass
                  =t(:assist)
              = link_to decline_user_traveler_relationship_path(current_user, t.id), remote: true, class: "btn btn-mini btn-warning text-center" do
                %i.icon-remove
                =t(:decline)


= render partial: 'shared/parameterized_datatable_javascript', locals: { table_id: '#travelersdatatable'}


= render partial: 'layouts/messages'
.row-fluid
  .span12
    %h4 Add a new buddy
.row-fluid
  .span12
    = simple_form_for [current_user, @buddy_relationship], remote: true, html: { class: 'form-inline' } do |f|
      = f.error_notification
      = f.input :email_address, label: t(:buddys_email_address)
      = button_tag type: :submit, class: 'btn btn-primary controls' do
        %i.icon.icon-ok
        = t(:send_buddy_request)
.row-fluid
  .span12
    %h4 My buddies
.row-fluid
  .span12
    - unless current_user.buddy_relationships.empty?
      %table.table.table.condensed.table-striped.table-hover.table-bordered#buddiesdatatable
        %thead
          %tr
            %th.left Email address
            %th.left Status
            %th.left Sent
            %th.center Actions
        %tbody
          - current_user.buddy_relationships.each do |buddy|
            %tr
              %td.left= buddy.email_address
              %td.left= buddy.status
              %td.left= distance_of_time_in_words_to_now(buddy.email_sent) + t(:ago)
              %td.center
                = link_to revoke_user_buddy_relationship_path(current_user, buddy.id), remote: true, class: "btn btn-mini btn-warning text-center" do
                  %i.icon-remove
                  =t(:revoke)
    - else
      You don't have any buddies. Send a buddy request by entering their email address above.

= render partial: 'shared/parameterized_datatable_javascript', locals: { table_id: '#buddiesdatatable',
  object_plural: 'buddies',
  sLengthMenu: t(:_menu__object_plural_per_page, object: 'buddies'),
  sInfo: t(:showing__start__to__end__of__total__object_plural, object: 'buddies'),
  object_singular: 'buddy',
  bLengthChange: false}

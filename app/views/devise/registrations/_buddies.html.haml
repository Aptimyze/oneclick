= render partial: 'shared/messages'
.row-fluid
  .span12
    %h4 Add a new buddy
.row-fluid
  .span12
    = simple_form_for [current_user], remote: true, html: { class: 'form-inline' } do |f|
      = f.error_notification
      = f.input :email, label: t(:buddys_email_address)
      = button_tag type: :submit, class: 'btn btn-primary controls' do
        %i.icon.icon-ok
        = t(:send_buddy_request)
.row-fluid
  .span12
    %h4 My buddies
.row-fluid
  .span12
    - unless current_user.delegate_relationships.empty?
      %table.table.table.condensed.table-striped.table-hover.table-bordered#buddiesdatatable
        %thead
          %tr
            %th.left Buddy
            %th.left Email address
            %th.left Status
            %th.left Sent
            %th.center Actions
        %tbody
          - current_user.delegate_relationships.each do |relationship|
            %tr
              %td.left= relationship.delegate.name
              %td.left= relationship.delegate.email
              %td.left= relationship.relationship_status
              //%td.left= distance_of_time_in_words_to_now(buddy.email_sent) + " ago"
              %td.left
              %td.center
                //= link_to revoke_user_buddy_relationship_path(current_user, buddy.id), remote: true, class: "btn btn-mini btn-warning text-center" do
                //  %i.icon-remove
                //  =t(:revoke)
    - else
      You don't have any buddies. Send a buddy request by entering their email address above.

= render partial: 'shared/parameterized_datatable_javascript', locals: { table_id: '#buddiesdatatable',
  object_plural: 'buddies',
  object_singular: 'buddy',
  bLengthChange: false}

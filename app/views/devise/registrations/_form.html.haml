= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name),
        html: {class: 'form-horizontal' }, wrapper: :horizontal_form do |f|
  .row.info-header
    .col-sm-6
      %h1= t(:sign_up)
    .col-sm-6.btns
      = button_tag type: 'submit', class: "btn action-button pull-right" do
        = t(:apply)
      = link_to t(:cancel), :back, class: "btn action-button pull-right"

  .row
    .col-sm-6
      .panel.panel-default#user_info
        .panel-heading
          %h3.panel-title= t(:user_information)
        .panel-body
          = f.error_notification
          = f.input :first_name, label: t(:first_name), :autofocus => true
          = f.input :last_name, label: t(:last_name)
          = f.input :email, label: t(:email), :required => true
          = f.input :preferred_locale, label: t(:preferred_locale), selected: @default_locale,
                :collection => Translation.available_locales, :include_blank => false
          = f.input :password, label: t(:password), :required => true
          = f.input :password_confirmation, :label => t(:password_confirmation), :required => true
